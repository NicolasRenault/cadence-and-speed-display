<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <!-- Speed Container -->
    <LinearLayout
        android:id="@+id/speedContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#222222"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.0">

        <!-- ... existing speed content ... -->
        <TextView
            android:id="@+id/tvSpeedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPEED"
            android:textColor="#A0A0A0"
            android:textSize="35sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="bottom">
            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvSpeedUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km/h"
                android:textColor="#A0A0A0"
                android:textSize="25sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/subSpeedMetricsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingEnd="12dp"
                android:paddingRight="12dp">
                <TextView
                    android:id="@+id/tvAvgSpeedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AVG"
                    android:textColor="#808080"
                    android:textSize="25sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/tvAvgSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#E0E0E0"
                        android:textSize="40sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvAvgSpeedUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km/h"
                        android:textColor="#808080"
                        android:textSize="30sp"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingStart="12dp"
                android:paddingLeft="12dp">
                <TextView
                    android:id="@+id/tvMaxSpeedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAX"
                    android:textColor="#808080"
                    android:textSize="25sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/tvMaxSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#E0E0E0"
                        android:textSize="40sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvMaxSpeedUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km/h"
                        android:textColor="#808080"
                        android:textSize="30sp"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Cadence Container -->
    <LinearLayout
        android:id="@+id/cadenceContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#222222"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/speedContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.35">

        <!-- Main Cadence Content (centered) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCadenceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CADENCE"
                android:textColor="#A0A0A0"
                android:textSize="35sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/tvCadence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#FFFFFF"
                    android:textSize="50sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvCadenceUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RPM"
                    android:textColor="#A0A0A0"
                    android:textSize="25sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/subCadenceMetricsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingEnd="12dp"
                    android:paddingRight="12dp">
                    <TextView
                        android:id="@+id/tvAvgCadenceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AVG"
                        android:textColor="#808080"
                        android:textSize="25sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/tvAvgCadence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#E0E0E0"
                            android:textSize="40sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvAvgCadenceUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RPM"
                            android:textColor="#808080"
                            android:textSize="25sp"
                            android:layout_marginStart="6dp"
                            android:layout_marginBottom="5dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp">
                    <TextView
                        android:id="@+id/tvMaxCadenceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAX"
                        android:textColor="#808080"
                        android:textSize="25sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/tvMaxCadence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="#E0E0E0"
                            android:textSize="40sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvMaxCadenceUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RPM"
                            android:textColor="#808080"
                            android:textSize="25sp"
                            android:layout_marginStart="6dp"
                            android:layout_marginBottom="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Battery Level (Bottom Right) -->
        <LinearLayout
            android:id="@+id/batteryLevelContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:paddingTop="4dp">
            <!-- Add paddingTop to prevent overlap if content above is large -->

            <ImageView
                android:id="@+id/ivBatteryIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bluetooth_unknown_24dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp" />
            <!-- You'll need to create battery icons like:
                 ic_battery_full, ic_battery_charging_full, ic_battery_good, ic_battery_low, ic_battery_alert, ic_battery_unknown -->

            <TextView
                android:id="@+id/tvBatteryLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--%"
                android:textColor="#A0A0A0"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Timer Container -->
    <LinearLayout
        android:id="@+id/timerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#222222"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cadenceContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintBottom_toTopOf="@+id/buttonsContainer">


        <TextView
            android:id="@+id/tvTimerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME"
            android:textColor="#A0A0A0"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tvTimerValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="#FFFFFF"
            android:textSize="45sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/timerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnSelectDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Session"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:backgroundTint="#007AFF"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Session"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:backgroundTint="#FF3B30"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
